/* pages/school/school.wxss */
.school{
  display: flex;
  height: 240rpx;
  margin: 20rpx 20rpx;
  border-bottom: 6rpx solid #f0eeee;
  justify-content: center;
}
/*标题区*/
.title{
  flex:1;
  margin: 10rpx 20rpx;
  position: relative;
}
/*图片区*/
.image{
  margin: 10rpx 20rpx;
}
.image image{
  height: 220rpx;
  width: 220rpx;
}
.text{
  font-size: 32rpx;
  letter-spacing: 4rpx;
  line-height: 46rpx;
  width: 60%;
  height:auto;
  text-overflow: ellipsis; 
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
/*内容区*/
.content{
  position: absolute;
  bottom: 0;
}
.content text{
  font-size: 24rpx;
  padding-right: 40rpx;
}