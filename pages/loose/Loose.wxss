.tab{                                   /**实现tab一行显示*/
  display: flex;
  flex-wrap: nowrap;
  font-size: 22rpx;
  margin: 20rpx 0;
}
.share,.commenticon,.heart,.seeCount{             /*实现tab三款垂直居中*/
  width: 25%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.share,.commenticon,.seeCount{              /*两侧加上竖线*/
  border-right: 2rpx solid #c5c3c3;
}
.share image{                           /*图片大小不相同，分别设置大小*/
  height: 34rpx;
  width: 34rpx;
}
.commenticon image{
  height: 38rpx;
  width: 38rpx;
}
.heart image{
  height: 30rpx;
  width: 36rpx;
} 
.seeCount image{
  height: 32rpx;
  width: 38rpx;
}
.tab text{                             /*设置图片与文字之间的间距*/
  padding-left: 10rpx;
}
.share{
  position: relative;
}
/*分享按钮*/
.shareButton{
  position: absolute;
  opacity: 0;
}
