/* pages/loose/Loose.wxss */
/**输入框*/
.submit{
  padding:0 20rpx;
  font-size: 26rpx;
  margin: 30rpx 30rpx;
  border: 2rpx solid #a09e9e;
  border-radius: 50rpx;
  position: relative;
}
.submit input {
  padding: 10rpx 10rpx;
  width:80%;
}
.submit icon{
  display: inline-block;
  position: absolute;
  top:12rpx;
  right: 40rpx;
}
.icon button{
  position: absolute;
  right:10rpx;
  top:0;
  opacity: 0;
}
/*动图和小信息*/
.head{
  margin:0 30rpx;
  display: flex;
}
.head image{
  display: inline-block;
  height: 140rpx;
  width: 140rpx;
  border-radius: 50%;
}
.message{
  margin: 10rpx 0 0 26rpx;
  flex:1;
  align-content: center;
  height: 100rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}
.viewblock{
  margin:30rpx 0 20rpx 0;
  height: 16rpx;
  width: 100%;
  background-color:#F6F6F6;
}
/*标签*/
.tag{
  width: 100%;
  height: 40rpx;
}
.tag text{
  font-size: 24rpx;
  margin:20rpx 40rpx;
}
/*动态改变nav颜色*/
/*每个信息模块的区间样式*/
.found{
  margin:30rpx 30rpx;
  border-bottom: 2rpx solid #e2dddd;
}
.active{
  color:#9A9494;
  padding-bottom: 6rpx;
  border-bottom: 4rpx solid #9A9494;
}
.found{
  margin:30rpx 30rpx;
}
.contenthead{          /*个人信息资料展示样式（头像、昵称）*/
  display: flex;
  align-items: center;
  margin: 30rpx 0 18rpx 0;
}
.contenthead image{
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
}
.contenthead text{
  padding-left: 5%;
}
.body{
  margin-bottom: 20rpx;
}
.title{
  font-size: 32rpx;
  letter-spacing: 2rpx;
  font-weight: 600;
}
.msg{
  font-size: 28rpx;
  height: 80rpx;
  overflow: hidden;
  margin-bottom: 14rpx;
  white-space: pre-line;
}
/*设置SecondType*/
.time{
  display: flex;
  font-size: 24rpx;
  position: relative;
  height: 44rpx;
}
.type{
  padding: 6rpx 10rpx;
  background-color: #A1BBB4;
  color: #ffffff;
  flex:1;
  justify-content: end;
  position: absolute;
  right: 20rpx;
  font-weight: 600;
  top:-4rpx
}
